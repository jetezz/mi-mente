---
import { UserMenu } from './UserMenu';

export interface Props {
  showDashboardLink?: boolean;
}

const { showDashboardLink = true } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/dashboard', label: 'ğŸ“¥ Dashboard', show: showDashboardLink },
  { href: '/chat', label: 'ğŸ§  Chat', show: true },
  { href: '/indexing', label: 'ğŸ”® IndexaciÃ³n', show: true },
  { href: '/categories', label: 'ğŸ“‚ CategorÃ­as', show: true },
  { href: '/settings', label: 'âš™ï¸ Config', show: true },
  { href: '/debug', label: 'ğŸ”§ Debug', show: true },
];
---

<header class="sticky top-0 z-50 backdrop-blur-xl bg-dark-950/80 border-b border-dark-800/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-500 to-primary-700 flex items-center justify-center text-2xl shadow-lg shadow-primary-500/25 group-hover:shadow-xl group-hover:shadow-primary-500/30 transition-shadow">
          ğŸ§ 
        </div>
        <span class="text-xl font-bold text-dark-100 hidden sm:block">
          Hybrid Brain
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden sm:flex items-center gap-4 sm:gap-6">
        {navLinks.filter(link => link.show).map(link => (
          <a 
            href={link.href} 
            class:list={[
              "transition-colors font-medium",
              currentPath === link.href 
                ? "text-primary-400" 
                : "text-dark-400 hover:text-dark-100"
            ]}
          >
            {link.label}
          </a>
        ))}
        
        <!-- User Menu (React component) -->
        <UserMenu client:load />
      </nav>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="sm:hidden p-2 rounded-lg hover:bg-dark-800 transition-colors"
        aria-label="Abrir menÃº"
      >
        <svg class="w-6 h-6 text-dark-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div 
    id="mobile-menu"
    class="hidden sm:hidden bg-dark-900 border-t border-dark-800"
  >
    <nav class="px-4 py-4 space-y-2">
      {navLinks.filter(link => link.show).map(link => (
        <a 
          href={link.href} 
          class:list={[
            "block px-4 py-3 rounded-lg transition-colors",
            currentPath === link.href 
              ? "bg-primary-500/20 text-primary-400" 
              : "text-dark-300 hover:bg-dark-800"
          ]}
        >
          {link.label}
        </a>
      ))}
      
      <div class="pt-4 border-t border-dark-700">
        <UserMenu client:load />
      </div>
    </nav>
  </div>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
    
    // Update icon
    const isOpen = !menu?.classList.contains('hidden');
    const svg = button.querySelector('svg');
    if (svg) {
      svg.innerHTML = isOpen 
        ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />'
        : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
    }
  });

  // Close menu on navigation
  document.querySelectorAll('#mobile-menu a').forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>
